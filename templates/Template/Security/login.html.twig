            <div class="d-flex flex-row-fluid flex-column justify-content-between">
                <!--begin: Aside header-->
                <a href="{{ path('security_login') }}" class="flex-column-auto mt-5 pb-lg-0 pb-10">
                    <img src="{{ asset(parameter('appLogoLogin')) }}" class="max-h-70px" alt="" />
                </a>
                <!--end: Aside header-->
                <!--begin: Aside content-->
