{{ form_start(form) }}
<div class="row">
    <div class="col-md-12">
        <h4 class="text-center pt-2 pr-2 pl-2 pb-2">DATOS GENERALES</h4>
    </div>
    <div class="col-sm-6">
        <div class="col-md-12 mt-3">
            {{ form_row(form.code) }}
        </div>
        <div class="col-md-12 mt-3">
            {{ form_row(form.name) }}
        </div>
        <div class="col-md-12 mt-3">
            {{ form_row(form.typeProfile) }}
        </div>
    </div>
    <div class="col-sm-6">
        <div class="col-md-12 mt-3">
            {{ form_row(form.description) }}
        </div>
        <div class="col-md-12 mt-3">
            {{ form_row(form.flagStatus) }}
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-4 mt-3">
        <h4 class="text-center pt-2 pr-2 pl-2 pb-2">ACCIONES</h4>
        <div class="dd" id="accionMenu" data-plugin="nestable1">
            <ol class="dd-list">
                {% for i in allAction %}
                    {% if i.submodule %}
                        <li class="dd-item dd-item-alt" data-id="{{ i.id }}">
                            <div class="dd-handle"></div>
                            <div class="dd-content">
                            <span class="float-left">
                                <i class="{{ i.icon }}"></i>
                            </span>
                                &nbsp;&nbsp;&nbsp;
                                {{ i.name }}
                                <span class="float-right">
                                <button type="button" class="btn btn-xs btn-icon btn-outline-danger deselectAllAction waves-effect waves-themed">
                                    <i class="fad fa-times-square"></i>
                                </button>
                                <button type="button" class="btn  btn-xs btn-icon btn-outline-primary selectAllAction waves-effect waves-themed">
                                    <i class="fad fa-check-square"></i>
                                </button>
                            </span>
                            </div>
                            <ol class="dd-list">
                                {% for ii in i.submodule %}
                                    <li class="dd-item dd-item-alt" data-id="{{ ii.id }}">
                                        <div class="dd-handle"></div>
                                        <div class="dd-content">
                                        <span class="float-left">
                                            <i class="{{ ii.icon }}"></i>
                                        </span>
                                            &nbsp;&nbsp;&nbsp;
                                            {{ ii.name }}
                                            <span class="float-right">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" value="{{ ii.id }}" class="custom-control-input checkInput"  name="actionMenu[]" {% if actionSelected is defined %}{% if ii.id in actionSelected %}checked{% endif %}{% endif%} id="checked{{ ii.id }}">
                                                <label class="custom-control-label" for="checked{{ ii.id }}"></label>
                                            </div>
                                        </span>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ol>
                        </li>
                    {% endif %}
                {% endfor %}
            </ol>
        </div>
    </div>
    <div class="col-sm-4 mt-3">
        <h4 class="text-center pt-2 pr-2 pl-2 pb-2">MENU</h4>
        <div class="dd" id="menu" data-plugin="nestable2">
            <ol class="dd-list">
                {% for i in allMenu %}
                    <li class="dd-item dd-item-alt" data-id="{{ i.id }}">
                        <div class="dd-handle"></div>
                        <div class="dd-content">
                            <span class="float-left">
                                <i class="{{ i.icon }}"></i>
                            </span>
                            &nbsp;&nbsp;&nbsp;
                            {{ i.name }}
                        </div>
                        {% if i.submodule %}
                            <ol class="dd-list">
                                {% for ii in i.submodule %}
                                    <li class="dd-item dd-item-alt" data-id="{{ ii.id }}">
                                        <div class="dd-handle"></div>
                                        <div class="dd-content">
                                    <span class="float-left">
                                        <i class="{{ ii.icon }}"></i>
                                    </span>
                                            &nbsp;&nbsp;&nbsp;
                                            {{ ii.name }}
                                        </div>
                                        {% if ii.submodule %}
                                            <ol class="dd-list">
                                                {% for iii in ii.submodule %}
                                                    <li class="dd-item dd-item-alt" data-id="{{ iii.id }}">
                                                        <div class="dd-handle"></div>
                                                        <div class="dd-content">
                                                    <span class="float-left">
                                                        <i class="{{ iii.icon }}"></i>
                                                    </span>
                                                            &nbsp;&nbsp;&nbsp;
                                                            {{ iii.name }}
                                                        </div>
                                                        {% if iii.submodule %}
                                                            <ol class="dd-list">
                                                                {% for iv in iii.submodule %}
                                                                    <li class="dd-item dd-item-alt" data-id="{{ iv.id }}">
                                                                        <div class="dd-handle"></div>
                                                                        <div class="dd-content">
                                                                    <span class="float-left">
                                                                        <i class="{{ iv.icon }}"></i>
                                                                    </span>
                                                                            &nbsp;&nbsp;&nbsp;
                                                                            {{ iv.name }}
                                                                        </div>
                                                                    </li>
                                                                {% endfor %}
                                                            </ol>
                                                        {% endif %}
                                                    </li>
                                                {% endfor %}
                                            </ol>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            </ol>
                        {% endif %}
                    </li>
                {% endfor %}
            </ol>
        </div>
    </div>
    <div class="col-sm-4 mt-3" id="profileSection">
        <h4 class="text-center pt-2 pr-2 pl-2 pb-2">PERFIL</h4>
        <div class="dd" id="profile" data-plugin="nestable3">
            {% if profileOrder is defined %}
                {% if profileOrder %}
                    <ol class="dd-list">
                        {% for i in profileOrder %}
                            <li class="dd-item dd-item-alt" data-id="{{ i.id }}">
                                <div class="dd-handle"></div>
                                <div class="dd-content">
                                    <span class="float-left">
                                        <i class="{{ i.icon }}"></i>
                                    </span>
                                    &nbsp;&nbsp;&nbsp;
                                    {{ i.name }}
                                </div>
                                {% if i.submodule %}
                                    <ol class="dd-list">
                                        {% for ii in i.submodule %}
                                            <li class="dd-item dd-item-alt" data-id="{{ ii.id }}">
                                                <div class="dd-handle"></div>
                                                <div class="dd-content">
                                            <span class="float-left">
                                                <i class="{{ ii.icon }}"></i>
                                            </span>
                                                    &nbsp;&nbsp;&nbsp;
                                                    {{ ii.name }}
                                                </div>
                                                {% if ii.submodule %}
                                                    <ol class="dd-list">
                                                        {% for iii in ii.submodule %}
                                                            <li class="dd-item dd-item-alt" data-id="{{ iii.id }}">
                                                                <div class="dd-handle"></div>
                                                                <div class="dd-content">
                                                            <span class="float-left">
                                                                <i class="{{ iii.icon }}"></i>
                                                            </span>
                                                                    &nbsp;&nbsp;&nbsp;
                                                                    {{ iii.name }}
                                                                </div>
                                                                {% if iii.submodule %}
                                                                    <ol class="dd-list">
                                                                        {% for iv in iii.submodule %}
                                                                            <li class="dd-item dd-item-alt" data-id="{{ iv.id }}">
                                                                                <div class="dd-handle"></div>
                                                                                <div class="dd-content">
                                                                            <span class="float-left">
                                                                                <i class="{{ iv.icon }}"></i>
                                                                            </span>
                                                                                    &nbsp;&nbsp;&nbsp;
                                                                                    {{ iv.name }}
                                                                                </div>
                                                                            </li>
                                                                        {% endfor %}
                                                                    </ol>
                                                                {% endif %}
                                                            </li>
                                                        {% endfor %}
                                                    </ol>
                                                {% endif %}
                                            </li>
                                        {% endfor %}
                                    </ol>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ol>
                {% endif %}
            {% endif %}
        </div>
    </div>
</div>
<div class="row">
    <div class="mt-3 col-sm-12 text-right">
        <div class="btn-group btn-group-sm">
            {{ form_widget(form.cancel) }}
            {% if saveAddOther %}
                {{ form_widget(form.saveAddOther) }}
            {% else %}
                <div style="display: none">
                    {{ form_widget(form.saveAddOther) }}
                </div>
            {% endif %}
            {{ form_widget(form.save) }}
        </div>
    </div>
</div>
{{ form_widget(form) }}
{{ form_end(form) }}
