            {#
            <!--begin::Content header-->
            <div class="position-absolute top-0 right-0 text-right mt-5 mb-15 mb-lg-0 flex-column-auto justify-content-center py-5 px-10">
                <span class="font-weight-bold text-dark-50">Dont have an account yet?</span>
                <a href="javascript:;" class="font-weight-bold ml-2">Sign Up!</a>
            </div>
            <!--end::Content header-->
            #}
            <!--begin::Content body-->
            <div class="d-flex flex-column-fluid flex-center mt-30 mt-lg-0">
                <!--begin::Signin-->
                <div class="login-form login-signin">
                    <div class="text-center mb-10 mb-lg-20">
                        <h3 class="font-size-h1">INICIO DE SESIÓN</h3>
                        <p class="text-muted font-weight-bold">Ingresar a la aplicación</p>
                    </div>
                    <!--begin::Form-->
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security')|raw }}</div>
                    {% endif %}

                    {% for flash_message in app.session.flashbag.get('notificactions') %}
                        <div class="alert alert-pro alert-warning">
                            <div class="alert-text">
                                <h6>{{ flash_message.title }}</h6>
                                <p>{{ flash_message.message }}</p>
                            </div>
                        </div>
                    {% endfor %}
                    <form method="post" autocomplete="off">
                        <input type="hidden" name="_target_path" value="dashboard_v1">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="form-group">
                            <div class="form-label-group">
                                <label class="form-label" for="username">Nombre de usuario o Correo</label>
                            </div>
                            <input id="username" required class="form-control form-control-solid h-auto py-5 px-6" placeholder="Ingrese su nombre de usuario o Correo"  value="{{ last_username }}" name="email" autocomplete="off" />
                        </div>
                        <div class="form-group">
                            <div class="form-label-group">
                                <label class="form-label" for="default-01">Contraseña</label>
                            </div>
                            <input class="form-control form-control-solid h-auto py-5 px-6" required type="password" name="password"  id="password" placeholder="Ingrese su contraseña" autocomplete="off" />
                        </div>
                        <div class="form-group text-left">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="rememberme" checked="checked" name="_remember_me">
                                <label class="custom-control-label" for="rememberme"> Recuérdame</label>
                            </div>
                        </div>
                        <!--begin::Action-->
                        <div class="form-group d-flex flex-wrap justify-content-between align-items-center">
                            <a href="{{ path('security_forgot_password') }}" class="text-dark-50 text-hover-primary my-3 mr-2">¿Olvido la contraseña?</a>
                            <button type="submit" class="btn btn-primary font-weight-bold px-9 py-4 my-3" style="background-color: #E3541B!important;border-color: #E3541B!important;">Iniciar sesión</button>
                        </div>
                        <!--end::Action-->
                    </form>
                    <a
                            href="{{ path('hwi_oauth_service_redirect', {'service': 'auth0'}) }}"
